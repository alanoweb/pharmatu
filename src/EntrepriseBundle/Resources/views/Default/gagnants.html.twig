{% extends '::base.html.twig' %}
{% block slide %}
{% endblock %}
{% block body %}
    <section class="elements">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1 style="">GAGNANTS</h1>
                </div>
                <div class="col-lg-12">
                    <div class="panel-body">
                        <table id="tableGagnants" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="hidden-xs">Numéro</th>
                                    <th class="hidden-xs">Profil</th>
                                    <th class="hidden-xs">Activité</th>
                                    <th class="hidden-xs">Cadeaux</th>
                                    <th class="hidden-xs">Rang</th>
                                    <th class="hidden-xs">Date</th>

                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th class="hidden-xs">Numéro</th>
                                    <th class="hidden-xs">Profil</th>
                                    <th class="hidden-xs">Activité</th>
                                    <th class="hidden-xs">Cadeaux</th>
                                    <th class="hidden-xs">Rang</th>
                                    <th class="hidden-xs">Date</th>

                                </tr>
                            </tfoot>
                            <tbody>
                                {%for gagnant in gagnants%}
                                    <tr>
                                        <td class="hidden-xs">{{gagnant.id}}</td>
                                        <td class="hidden-xs" ><a href="">{{gagnant.utilisateur.id}}</a></td>
                                        <td class="hidden-xs"><a href="">{{gagnant.activity.id}}</td>
                                        <td class="hidden-xs"><a href="">{{gagnant.cadeaux.id}}</a></td>
                                        <td class="hidden-xs"><a href="">{{gagnant.rang}}</a></td>
                                        <td class="hidden-xs">{{gagnant.date|date('d/m/Y')}}</td>                                                    
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>	
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascript %}
    <script>
        $(document).ready(function () {
            $('#tableGagnants').DataTable({
                "language": {
                    "decimal": "",
                    "emptyTable": "Aucune données dans le tableau ",
                    "info": "Affichage de _START_ à _END_ de _TOTAL_ entrer",
                    "infoEmpty": " 0 de 0 affiché",
                    "infoFiltered": "(filtrer de _MAX_ entrer total)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Afficher _MENU_ par page",
                    "loadingRecords": "Loading...",
                    "processing": "Processe en cours...",
                    "search": "Recherche:",
                    "zeroRecords": "Aucune Resultas trouvée",

                    "paginate": {
                        "first": "Premiere",
                        "last": "Derniere",
                        "next": "Suivant",
                        "previous": "Précedent"
                    },
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    }
                }
            });
        });
    </script>
{% endblock %}