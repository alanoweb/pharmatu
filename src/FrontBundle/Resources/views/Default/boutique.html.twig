{% block slide %}
    {% if is_granted('ROLE_ADMIN')%}
    {%else%}
        {{ parent() }}
    {% endif%}
{% endblock%}

{% block wrapper %}
    {% if is_granted('ROLE_ADMIN')%}
        <section id="boutique2ndnav" class="padding-top-25 no-padding-bottom border-bottom-1 border-grey-300" style="padding-top: 25px !important;background-color: #FFF!important;height:60px">
            <div class="container">
                <div class="headline" style="margin-top: -16px">
                    <div class="text-center">
                        <a href="javascript:void(0);" data-toggle="modal" data-target="#addProduit" class="button pill big primary">
                            <span class="plus icon"></span>Ajouter un Produit
                        </a> 
                    </div>

                </div>
            </div>
        </section>
    {%endif%}
    <section class="bg-grey-50" style="padding-top: 0px">
        <div class="container">
            <div class="row">
                {%for produit in produits%}
                    {%if is_granted('ROLE_ADMIN') %}
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                            <div class="card">
                                <div class="card-img">
                                    <img src="{{asset(produit.getImage())}}" alt="">
                                    <div class="category"><span class="label label-success">{{produit.getStatus()}}</span></div>
                                    <div class="meta"><i class="fa fa-cubes"></i> <span>stock : {{produit.getStock()}}</span></div>
                                </div>
                                <div class="caption">
                                    <div class="text-center"><h3 class="card-title">{{produit.getLibele()}}</h3></div>
                                    <ul><li>{{produit.getDescription()}}</li></ul>
                                    <div class="text-center">
                                        <a href="javascript:void(0);" class="left positive pill button" style="padding-left: 5px;margin-right: -5px" onclick="StockModalProduit({{produit.getId()}});"><span class="fa fa-cubes"></span> Stock</a> 
                                        <a href="javascript:void(0);" {%if produit.getStatus() == "Deleted" %}class="right pill button"{%else%}class="middle pill button"{%endif%} style="padding-left: 5px;" onclick="editModalProduit({{produit.getId()}});"><span class="fa fa-pencil"></span> Modifier</a>
                                        {%if produit.getStatus() != "Deleted" %}<a href="javascript:void(0);" class="right negative pill button" style="padding-left: 5px;margin-left: -4px" onclick="DeleteProduit({{produit.getId()}});"><span class="fa fa-close"></span> Supprimer</a> {%endif%}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {%elseif (is_granted('ROLE_ENTREPRISE')or not app.user)%}
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                            <div class="card">
                                <div class="card-img">
                                    <img src="{{asset(produit.getImage())}}" alt="">
                                    <div class="category"><span class="label label-success">{{produit.getNbrCoin()}} Coin</span></div>
                                    <div class="meta"><i class="fa fa-cubes"></i> <span>stock : {{produit.getStock()}}</span></div>
                                </div>
                                <div class="caption">
                                    <div class="text-center"><h3 class="card-title">{{produit.getLibele()}}</h3></div>
                                    <ul><li>{{produit.getDescription()}}</li></ul>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        {%if not (produit.getStatus() == "Stock epuiser" or produit.getStatus() == "Deleted" ) %}
                            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="card">
                                    <div class="card-img">
                                        <img src="{{asset(produit.getImage())}}" alt="">
                                        <div class="category"><span class="label label-success">{{produit.getNbrCoin()}} Coin</span></div>
                                        <div class="meta"><i class="fa fa-cubes"></i> <span>stock : {{produit.getStock()}}</span></div>
                                    </div>
                                    <div class="caption">
                                        <div class="text-center"><h3 class="card-title">{{produit.getLibele()}}</h3></div>
                                        <ul><li>{{produit.getDescription()}}</li></ul>
                                        <div class="text-center"><a href="javascript:void(0);" class="btn btn-primary btn-lg btn-shadow btn-rounded btn-icon-right" onclick="AcheterProduit({{produit.getId()}});">Acheter </a></div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                {% endfor %}	
            </div>



            <ul class="pagination margin-top-20" style="    margin-left: 25%;">
                <li class="disabled"><a href="#">Previous</a></li>
                <li class="disabled"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">6</a></li>
                <li><a href="#">7</a></li>
                <li><a href="#">8</a></li>
                <li><a href="#">...</a></li>
                <li><a href="#">124</a></li>
                <li><a href="#">125</a></li>
                <li><a href="#">Next</a></li>
            </ul>
        </div>
    </section>

