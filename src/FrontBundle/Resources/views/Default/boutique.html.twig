{% block javascript %}
    <script>
        var menu = $('#boutique2ndnav');
        var origOffsetY = menu.offset().top;
        function scroll() {
        if ($(window).scrollTop() >= origOffsetY - 50) {
        $('#boutique2ndnav').css({'position': 'fixed', 'width': '100%', 'top': '60px', 'z-index': '1020'});
        } else {
        $('#boutique2ndnav').removeAttr('style');
        $('#boutique2ndnav').css({'padding-top': '25px', 'background-color': '#E0E2E0', 'height': '60px'});
        }


        }
        scroll();
        document.onscroll = scroll;
    </script>
    <script>
        function AjouterProduit() {
        $_data = {
        'LibeleProduit': $("#LibeleProduit").val(),
                'DescriptionProduit': $("#DescriptionProduit").val(),
                'NbrPointProduit': $("#NbrPointProduit").val(),
                'StockProduit': $("#StockProduit").val(),
                'PrixProduit': $("#PrixProduit").val(),
                'ImageProduit': "img\\game\\2.jpg"
        };
        $.ajax({
        type: "POST",
                url: "{{path('add_produit')}}",
                data: $_data,
                success: function () {
                location.reload();
                }
        });
        }
        function DeleteProduit($id) {
        $_data = {
        'id': $id
        };
        $.ajax({
        type: "POST",
                url: "{{path('delete_produit')}}",
                data: $_data,
                success: function () {
                location.reload();
                }
        });
        }
        function StockModalProduit($idProduit) {
        {%for produit in produits%}
            if ($idProduit == {{produit.getId()}}) {
            $("#ModifierStockProduit").val("{{produit.getStock()}}");
            $('#EditeStockProduit').find("legend").first().html("Modifier Stock Produit | {{produit.getLibele()}}");
            $("#AddStockProduit").attr('onclick', "StockProduit('{{produit.getId()}}','ajouter')");
            $("#DeminuerStockProduit").attr('onclick', "StockProduit('{{produit.getId()}}','deminuer')");
            $('#EditeStockProduit').modal('show');
            }
        {% endfor %}
            }

            function StockProduit($idProduit, $type) {
            $_data = {
            'idProduit': $idProduit,
                    'QuantiteProduit': $('#QuantiteProduit').val(),
                    'Type': $type
            };
            $.ajax({
            type: "POST",
                    url: "{{path('edit_stock_produit')}}",
                    data: $_data,
                    success: function () {
                    location.reload();
                    }
            });
            }

            function editModalProduit($idProduit) {
        {%for produit in produits%}
            if ($idProduit == {{produit.getId()}}) {
            $("#EditLibeleProduit").val("{{produit.getLibele()}}");
            $("#EditDescriptionProduit").val("{{produit.getDescription()}}");
            $("#EditNbrPointProduit").val("{{produit.getNbrCoin()}}");
            $("#EditStockProduit").val("{{produit.getStock()}}");
            $("#EditPrixProduit").val("{{produit.getPrix()}}");
            $('#editProduit').find("legend").first().html("Modifier Produit | {{produit.getLibele()}}");
            $("#EditProduit").attr('onclick', "ModifierProduit('{{produit.getId()}}')");
            $('#editProduit').modal('show');
            }
        {% endfor %}
            }
            function ModifierProduit($id) {
            $_data = {
            'id': $id,
                    'LibeleProduit': $("#EditLibeleProduit").val(),
                    'DescriptionProduit': $("#EditDescriptionProduit").val(),
                    'NbrPointProduit': $("#EditNbrPointProduit").val(),
                    'StockProduit': $("#EditStockProduit").val(),
                    'PrixProduit': $("#EditPrixProduit").val(),
                    'ImageProduit': "img\\game\\2.jpg"
            };
            $.ajax({
            type: "POST",
                    url: "{{path('edit_produit')}}",
                    data: $_data,
                    success: function () {
                    location.reload();
                    }
            });
            }
            function AcheterProduit($idProduit) {
            $_data = {
            'idProduit': $idProduit
            };
            $.ajax({
            type: "POST",
                    url: "{{path('acheter_produit')}}",
                    data: $_data,
                    success: function () {
                    location.reload();
                    }
            });
            }
    </script>
{% endblock %}
